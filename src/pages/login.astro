---
import Layout from '../layouts/Layout.astro';

// If already logged in, redirect to dashboard
if (Astro.cookies.has('session')) {
  return Astro.redirect('/dashboard');
}

const error = Astro.url.searchParams.get('error');
---

<Layout title="Login">
  <div class="flex flex-col items-center justify-center min-h-[70vh] px-4">
    <div class="w-full max-w-md p-8 rounded-xl bg-white dark:bg-gray-800 shadow-xl border border-gray-200 dark:border-gray-700">
      <h1 class="text-2xl font-bold mb-6 text-center">Admin Login</h1>

      {error && (
        <div class="mb-4 p-3 rounded-lg bg-red-100 text-red-700 text-sm">
          {error === 'invalid' ? 'Invalid credentials' : 'Login failed'}
        </div>
      )}

      <form method="POST" action="/api/auth/login" class="space-y-4">
        <div>
          <label class="block text-sm font-medium mb-1">Email</label>
          <input type="email" name="email" required class="w-full p-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="admin@example.com" />
        </div>

        <div>
          <label class="block text-sm font-medium mb-1">Password</label>
          <input type="password" name="password" required class="w-full p-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-gray-50 dark:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="••••••••" />
        </div>

        <button type="submit" class="w-full py-2 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded-lg transition-colors cursor-pointer">
          Log In
        </button>
      </form>
    </div>
  </div>
</Layout>
