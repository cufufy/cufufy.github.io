---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Not Found">
	<main class="flex flex-col items-center justify-center min-h-[70vh] text-center px-4">
		<h1 class="text-6xl font-bold mb-4">404</h1>
		<p class="text-xl opacity-80 mb-8">Page not found.</p>
		<a href="/" class="px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg text-white font-medium transition-colors">
			Go Home
		</a>
	</main>
</Layout>
