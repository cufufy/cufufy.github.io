---
import type { Project } from '../data/projects';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow border border-gray-700">
  <div class="p-6">
    <div class="flex justify-between items-start mb-2">
      <span class="inline-block bg-indigo-900 text-indigo-200 text-xs px-2 py-1 rounded-full font-semibold uppercase tracking-wide">
        {project.category}
      </span>
      {project.featured && (
        <span class="text-yellow-500" title="Featured Project">â˜…</span>
      )}
    </div>
    <h3 class="text-xl font-bold text-white mb-2">
      <a href={project.link} class="hover:text-indigo-400 transition-colors" target="_blank" rel="noopener noreferrer">
        {project.name}
      </a>
    </h3>
    <p class="text-gray-300 mb-4">{project.one_liner}</p>

    <div class="mb-3">
      <h4 class="text-sm font-semibold text-white">Outcomes:</h4>
      <p class="text-sm text-gray-300">{project.outcomes}</p>
    </div>

    <div class="mb-3">
        <h4 class="text-sm font-semibold text-white">Stack:</h4>
        <p class="text-sm text-gray-400 font-mono">{project.stack}</p>
    </div>

    <div class="mt-4 pt-4 border-t border-gray-700 flex justify-between items-center">
        <span class="text-xs text-gray-400 italic">Proof: {project.proof}</span>
        <a href={project.link} class="text-indigo-400 hover:text-indigo-300 text-sm font-medium" target="_blank">View Project &rarr;</a>
    </div>
  </div>
</div>
